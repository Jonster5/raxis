{
	"name": "raxis-ecs",
	"version": "1.0.0",
	"description": "Raxis Game Engine",
	"type": "module",
	"files": [
		"dist",
		"types"
	],
	"main": "./dist/raxis.umd.cjs",
	"module": "./dist/raxis.js",
	"types": "./types/raxis.d.ts",
	"exports": {
		".": {
			"import": "./dist/raxis.js",
			"require": "./dist/raxis.umd.cjs",
			"types": "./types/raxis.d.ts"
		}
	},
	"scripts": {
		"dev": "vite",
		"docs": "documentation build lib/** -f md -o docs.md",
		"build": "tsc && vite build & npm run docs",
		"publish": "npm run build & npm publish",
		"version": "git add -A lib",
		"postversion": "git push && git push --tags"
	},
	"devDependencies": {
		"typescript": "^5.1.3",
		"vite": "^4.3.9"
	},
	"repository": "https://github.com/Jonster5/raxis.git",
	"dependencies": {
		"number-allocator": "^1.0.14"
	}
}
